@model IEnumerable<MAVRS.Models.Admin>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
div class="card card-1">
<div class="card-body  text-left">
    <h5>Admin details</h5>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.staff_no)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Full_names)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone_number)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Role)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Full_names)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone_number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.staff_no">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.staff_no">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.staff_no">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
